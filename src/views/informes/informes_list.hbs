<div class="container">
  <div class="row mt-5">
    <h2>Lista de Informes Financieros</h2>
    {{#if informes}}
      <table class="table text-center">
        <thead>
          <tr class="table-dark">
            <th>Nº Informe</th>
            <th>Total Activo Neto</th>
            <th>Total Pasivo</th>
            <th>Total Patrimonio</th>
            <th>Total Patrimonio y Pasivo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each informes}}
            {{#each this}}
              <tr>
                <td>{{num_inf}}</td>
                <td>{{TotActNet}}</td>
                <td>{{TotPas}}</td>
                <td>{{TotPat}}</td>
                <td>{{TotPatPas}}</td>
                <td>
                  <a
                    href="/informes_edit/{{num_inf}}"
                    class="btn btn-success"
                  >Editar</a>

                  <a
                    href="#"
                    class="btn btn-danger"
                  >Borrar</a>
                </td>
              </tr>
            {{/each}}
          {{/each}}
        </tbody>
        <tfoot>
          <tr class="table-dark">
            <td colspan="6">Registro de Informes Financieros</td>
          </tr>
        </tfoot>
      </table>
    {{else}}
      <div class="card text-center mx-auto" style="width: 350px">
        <div class="card-header">
          <h3>No hay informes Financieros disponibles</h3>
        </div>
        <div class="card-body">
          <h3>Presiona el botón para crear un informe Financieros</h3>
          <a href="#" class="btn btn-primary">Crear</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>