  Date(dateString); const year = dateObject.getFullYear(); const month =
  String(dateObject.getMonth() + 1).padStart(2, '0'); const day =
  String(dateObject.getDate()).padStart(2, '0'); // return
  `${year}-${month}-${day}`; } document.addEventListener('DOMContentLoaded',
  function() { const fechaInput = document.getElementById('Fec'); // if
  (fechaInput) { fechaInput.value = formatDateForInput("{{comprobante.Fec}}"); }
  });
</script>