<div class="container">
  <div class="row at-5">
    <h2>Lista de comprobantes</h2>
    {{#if comprobantes}}
        <table class="table text-center">
          <thead>
            <tr class="table-dark">
              <th>NÂº Comprobante</th>
              <th>Tipo</th>
              <th>Origen</th>
              <th>Fecha</th>
              <th>Total</th>
              <th>Editar</th>
            </tr>
          </thead>
          <tbody>
            {{#each comprobantes}}
              {{#each this}}
                <tr>
                  <td>{{Num_com}}</td>
                  <td>{{Tip_Doc}}</td>
                  <td>{{Ori}}</td>
                  <td>{{formatDate Fec}}</td>
                  <td>{{Mon_Tot}}</td>
                  <td>
                    <div>
                      <a href="/comprobantes_edit/{{Num_com}}" class="btn btn-success">Editar</a>
                      <a href="/comprobantes_delete/{{Num_com}}" class="btn btn-danger">Eliminar</a>
                    </div>
                  </td>
                </tr>
              {{/each}}
            {{/each}}
          </tbody>
          <tfoot>
            <tr class="table-dark">
              <td colspan="6">Registro de Comprobantes</td>
            </tr>
          </tfoot>
        </table>
    {{else}}
      <div class="card text-center mxauto" style="width: 350px">
        <div class="card-header">
          <h3>Debes crear antes comprobantes</h3>
        </div>
        <div class="card-body">
          <h3>Presiona el boton para crear un comprobante</h3>
          <a href="#" class="btn btn-primary">Crear</a>
        </div>
      </div>
    {{/if}}
  </div>
</div>